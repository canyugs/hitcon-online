      <div class="playerlist-search-input">
        <input type="text" id="searchPlayer" placeholder="搜尋線上玩家">
      </div>
      <img src="/static/extensions/playerlist/common/awesome-search.svg">
    </div>
    <div class="playerlist-list" id="playerlist"></div>
  </div>
</div>

<!-- Template for player item -->
<div class="playerlist-player" id="playerlist-player">
  <img class="player-picture" src="https://via.placeholder.com/56x61">
  <div class="player-information">
