<script type="text/javascript">
  function startPrivateMessage(playerID) {
    document.getElementById("message_to").value = playerID;
    document.getElementById("utilpanel-btnimg-chat").click();
    document.getElementById("chat_message").focus();
  }
</script>

<div class="playerlist-container" id="playerlist-overlay">
  <div class="utilpanel-viewer">
    <!-- Use onchange callback to deal with it -->
