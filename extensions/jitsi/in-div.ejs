<style>
#jitsi-container {}
#jitsi-remote-container {}
#jitsi-local-container {
  background-color: saddlebrown;
}
.jitsi-audio {
  display: none;
}
.jitsi-local-video {
  height: 100%;
  width: 100%;
}
.jitsi-remote-video {
  height: 100%;
  width: 100%;
}
.jitsi-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
  margin: 0;
}
.jitsi-remote-container {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap-reverse;
  align-items: center;
  margin: 0;
  max-height: 558px;
}
.jitsi-local-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0;
}
.jitsi-user-container {
  width: 214px;
  height: 161px;
  background: #101010 0% 0% no-repeat padding-box;
  border-radius: 12px;
  opacity: 1;
  position: relative;
  margin-bottom: 25px;
  margin-left: 25px;
}

.jitsi-user-container:not(.active) {
  order: 100;
}
.jitsi-user-container.active > .jitsi-user-loading {
  display: none;
}

.jitsi-user-name {
  text-align: center;
  font-size: 12px;
  font-weight: border;
  letter-spacing: 0px;
  color: #FFFFFF;
  background: #3F487B 0% 0% no-repeat padding-box;
  border-radius: 18px;
  opacity: 1;
  position: absolute;
  bottom: 0px;
  width: 100%;
  height: 21px;
}

.jitsi-user-loading {
  width: 100%;
  height: 100%;
  position: absolute;
  bottom: 10px;
  background: transparent url("/static/extensions/jitsi/common/icons/spinner-solid.svg") 0% 0% no-repeat padding-box;
  background-position: center;
  background-size: 28%;
  animation: rotation 2s infinite linear;
}

@keyframes rotation {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(359deg);
  }
}

.jitsi-user-video {
  width: 100%;
  height: 100%;
  position: absolute;
}

.jitsi-user-video--close {
  background: transparent url("/static/extensions/jitsi/common/icons/awesome-video-slash.svg") 0% 0% no-repeat padding-box;
  background-position: 50% 40%;
}
.jitsi-user-audio {
  width: 100%;
  height: 100%;
  position: absolute;
}
.jitsi-user-audio.active {
  box-shadow: 0px 3px 14px #5CC11CE0;
}
.jitsi-user-audio--close {
  background: transparent url('/static/extensions/jitsi/common/icons/awesome-microphone-alt-slash.svg') 0% 0% no-repeat padding-box;
  background-position: 95% 77%;
}
.jitsi-status-container > img {
  height: 20px;
  width: auto;
}

