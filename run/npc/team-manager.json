{
    "enabled": true,
    "initialPosition": {"mapName": "world1", "x": 8, "y": 15},
    "display": [
      {
        "zIndex": 11,
        "layerName": "npcImage",
        "renderFunction": "_drawOneCharacterImage",
        "renderArgs": null,
        "character": "char1"
      },
      {
        "zIndex": 16,
        "layerName": "npcName",
        "renderFunction": "_drawOneCharacterName",
        "renderArgs": null
      }
    ],
    "FSM": {
      "initialState": "baseState",
      "states": {
        "baseState": {
          "func": "checkTeamStatus",
          "kwargs": {
            "indivMenu": "indivMenu",
            "teamMenu": "teamMenu"
          }
        },
        "indivMenu": {
          "func": "showDialog",
          "kwargs": {
            "dialogs": "Hello!\nWant to join the escape game?",
            "options": {
              "Yes, I want to create a new team.": "newTeam1",
              "Yes, I want join an existing team with the invitation code.": "joinTeam1",
              "No, bye!": "exit"
            }
          }
        },
        "newTeam1": {
            "func": "createTeam",
            "kwargs": {
              "nextState": "exit"
            }
        },
        "joinTeam1": {
            "func": "joinTeamByInvitationCode",
            "kwargs": {
              "dialog": "Give me your invitation code!",
              "nextState": "joinTeam2",
              "nextStateCantEnter": "joinTeam3",
              "nextStateNotFound" : "joinTeam4"
            }
        },
        "joinTeam2": {
          "func": "showDialog",
          "kwargs": {
            "dialogs": "Joined successfully.",
            "options": {
              "Thanks, bye!": "exit"
            }
          }
        },
        "joinTeam3": {
          "func": "showDialog",
          "kwargs": {
            "dialogs": "Oops! Failed to join the team.",
            "options": {
              "OK.": "exit"
            }
          }
        },
        "joinTeam4": {
          "func": "showDialog",
          "kwargs": {
            "dialogs": "The invitation code is invalid.",
            "options": {
              "I'll check the code again.": "exit"
            }
          }
        },
        "teamMenu": {
          "func": "showTeamMenu",
          "kwargs": {
            "showMembers": "showMemebers",
            "showInvitationCode": "showInvitationCode",
            "finalize": "finalize",
            "quitTeam": "quitTeam",
            "exit": "exit"
          }
        },
        "showMemebers": {
          "func": "showMembers",
          "kwargs": {
            "nextState": "exit"
          }
        },
        "showInvitationCode": {
          "func": "showInvitationCode",
          "kwargs": {
            "nextState": "exit"
          }
        },
        "finalize": {
          "func": "finalize",
          "kwargs": {
            "nextState": "exit"
          }
        },
        "quitTeam": {
          "func": "quitTeam",
          "kwargs": {
            "nextState": "exit"
          }
        },
        "exit": {
          "func": "exit",
          "kwargs": {
            "next": "baseState"
          }
        }
      }
    }
  }
